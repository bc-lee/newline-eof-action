{
  "name": "newline-eof-action",
  "version": "0.0.0",
  "private": true,
  "description": "Github action who cares about the newline and eof",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "rm -rf dist && ncc build --source-map --license LICENSE && find dist -type f | xargs -n1 tools/dos2unix.py",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "author": "Byougchan Lee",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/parser": "^4.20.0",
    "@vercel/ncc": "0.27.0",
    "eslint": "^7.23.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.3.4",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
